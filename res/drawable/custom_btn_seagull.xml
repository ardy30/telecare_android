<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="6dip" />
             <stroke android:width="1dip" android:color="#7F7F7F" />
             <gradient  android:angle="-90"  android:startColor="#379AF6" android:endColor="#379AF6"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="6dip" />
             <stroke android:width="1dip" android:color="#7F7F7F" />
             <solid  android:color="#D8E5FF"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="6dip" />
             <stroke android:width="1dip" android:color="#7F7F7F" />
             <gradient  android:angle="-90"  android:startColor="#FFFFFF" android:endColor="#E4F2FF" />            
         </shape>
     </item>
</selector>